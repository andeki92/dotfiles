# All Files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Shell
[*.sh]
indent_size = 2
max_line_length = 160

# TOML
[*.toml]
indent_size = 2
max_line_length = 160

# YAML
[*.{yml,yaml}]
indent_size = 2
max_line_length = 160
